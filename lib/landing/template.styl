.Landing
	width 100%
	height 100%
	&-image
		width 100%
		height 100vh
		background url('../images/bg.jpg') fixed
		background-size cover
		background-repeat no-repeat
		background-position center
		// display block
	&-info
		position absolute
		width 100%
		top 0
		left 0
		height 100vh
		margin 0
		padding 0
		background rgba(0, 0, 0, .3)
		display table
	&-text-container
		text-align center
		display table-cell
		vertical-align middle
	&-osnet
		font-family 'Quicksand', sans-serif
		display inline-block
		margin 0
		padding 0
		font-size 5em
		color white
		font-weight 400
	&-work
		color white
		font-family 'Quicksand', sans-serif
		font-weight 300
		margin 0
		padding 0
.ios
	background-attachment scroll